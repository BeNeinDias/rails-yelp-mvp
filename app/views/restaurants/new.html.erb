<h1>Add a restaurant</h1>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control form-group" %>

  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control form-group" %>

  <%= f.label :category %>
  <%= f.text_field :category, class: "form-control form-group" %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number, class: "form-control form-group" %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
